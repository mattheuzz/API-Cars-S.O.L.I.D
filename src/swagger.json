{
  "openapi": "3.0.0",
  "info": {
    "title": "Rental Car API",
    "description": "API for Rental Car",
    "version": "1.0.0",
    "contact": {
      "email": "matheus@gmail.com"
    }
  },
  "paths": {
    "/categories": {
      "post": {
        "tags": ["Categories"],
        "summary": "Create a category",
        "description": "Create a new car category to rent",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  }
                },
                "exemples": {
                  "name": "Category name sample",
                  "description": "description of a category"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Category created"
          },
          "400": {
            "description": "Name and description are required"
          },
          "500": "Category alredy exist"
        }
      },
      "get": {
        "tags": ["Categories"],
        "summary": "List all categories",
        "description": "Get all categories created in the system",
        "response":{
          "200":{
            "description": "Success",
            "content": {
              "aplication/json": {
                "schema":{
                  "types": "array",
                  "items": {
                    "type": "object",
                    "propreties": {
                      "name": {
                        "type": "string"
                      },
                      "description": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/categories/imports": {
      "post": {
        "tags": ["Categories"],
        "summary": "Import categories",
        "description": "Import new categories from a file",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Categories created"
          }
        }
      }
    },
    "/specifications": {
      "post": {
        "tags": ["Specifications"],
        "summary": "Create a secifications",
        "description": "Create a new car specifications to rent",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#definitions/Specification"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Specifications created"
          },
          "400": {
            "description": "Specifications alredy exist"
          }
        }
      }
    }
  },
  "definitions": {
    "Specification": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      }
    }
  }
}
